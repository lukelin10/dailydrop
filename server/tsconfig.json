{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/server",
    "noEmit": false,
    "jsx": "react",
    "types": ["node"],
    "paths": {
      "@/*": ["../client/src/*"],
      "@shared/*": ["../shared/*"]
    },
    "rootDir": ".."
  },
  "include": ["**/*", "../shared/**/*"],
  "exclude": ["**/*.test.ts"]
}