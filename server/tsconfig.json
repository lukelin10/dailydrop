{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/server",
    "noEmit": false,
    "jsx": "react",
    "types": ["node"],
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["client/src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["**/*", "../shared/**/*"],
  "exclude": ["**/*.test.ts"]
}